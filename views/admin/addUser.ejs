<%- include('../partials/admin_partials/adminHeader') %>
<%- include('../partials/admin_partials/adminNavbar') %>

<a href="/admin/dashboard" class="btn btn-success go-back"><i class="fa-solid fa-arrow-left"></i> Go back</a>
<div class="container-fluid h-100 d-flex pt-5">
    <div
      class="container  bg-danger align-self-center rounded rounded-3 px-5 py-4 container-signup text-white w-25"
    >
      <h2>Add user</h2>
      <div class="error">
        <% if(locals.message){ %>
        <div class="error-msg <%=color %>"><%= message %></div>
        <% } %>
      </div>
      <form method="post" action="/admin/add-user">
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Name</label>
          <input
            type="name"
            class="form-control border border-dark"
            id="exampleInputEmail1"
            aria-describedby="emailHelp"
            name="name"
            required
          />
        </div>
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Email address</label>
          <input
            type="email"
            class="form-control border border-dark"
            id="exampleInputEmail1"
            aria-describedby="emailHelp"
            name="email"
            required
          />
        </div>
        <div class="mb-3">
          <label for="phone" class="form-label">Phone number</label>
          <input
            type="number"
            class="form-control border border-dark"
            id="phone"
            aria-describedby="emailHelp"
            name="phone"
            required
          />
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label">Password</label>
          <input
            type="password"
            class="form-control border border-dark"
            id="exampleInputPassword1"
            name="password"
            required
          />
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label"
            >Confirm password</label
          >
          <input
            type="password"
            class="form-control border border-dark"
            id="exampleInputPassword1"
            name="confPassword"
            required
          />
        </div>
        <button type="submit" class="btn btn-outline-light">Add</button>
      </form>
    </div>
  </div>

  <%- include('../partials/admin_partials/adminFooter') %>
