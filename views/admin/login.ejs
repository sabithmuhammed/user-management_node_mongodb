<%- include('../partials/admin_partials/adminHeader') %>
<div class="container-fluid  h-100">
    <div class="container w-50 h-100  d-flex justify-content-center">
        <form action="/admin/login" method="post" class="align-self-center w-50 h-50 d-flex flex-column px-5 pt-3 pb-3 justify-content-between text-white bg-danger rounded">
            <h2>Admin Login</h2>
            <div class="error">
                <% if(locals.message){ %>
                <div class="error-msg <%=color %>"><%= message %></div>
                <% } %>
              </div>
            <label for="name" class="form-label">Email address</label>
            <input type="email"  name="email" class="form-control" placeholder="Username">
            <label for="password" class="form-label">Password </label>
            <input type="password" class="form-control" name="password" id="password" placeholder="Password">
            <button type="submit" class="btn btn-outline-light w-50 align-self-center mt-2">Login</button>
        </form>
    </div>
</div>


<%- include('../partials/admin_partials/adminFooter') %>
