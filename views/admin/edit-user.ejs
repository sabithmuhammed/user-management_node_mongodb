<%- include('../partials/admin_partials/adminHeader') %>
<%- include('../partials/admin_partials/adminNavbar') %>

<div class="container h-100 w-75">

  <a href="/admin/dashboard" class="btn btn-success go-back"><i class="fa-solid fa-arrow-left"></i> Go back</a>

<div class="container-fluid h-100 w-50 d-flex">
    <div
      class="container  bg-danger align-self-center rounded rounded-3 px-5 py-4 container-signup text-white "
    >
      <h2>Edit user</h2>
      <div class="error">
        <% if(locals.message){ %>
        <div class="error-msg <%=color %>"><%= message %></div>
        <% } %>
      </div>
      <form method="post" action="/admin/edit-user">
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Name</label>
          <input
            type="name"
            class="form-control border border-dark"
            id="exampleInputEmail1"
            aria-describedby="emailHelp"
            name="name"
            required
            value = "<%= user.name %>"
          />
        </div>
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Email address</label>
          <input
            type="email"
            class="form-control border border-dark"
            id="exampleInputEmail1"
            aria-describedby="emailHelp"
            name="email"
            required
            value = "<%= user.email %>"
          />
        </div>
        <div class="mb-3">
          <label for="phone" class="form-label">Phone number</label>
          <input
            type="number"
            class="form-control border border-dark"
            id="phone"
            name="phone"
            required
          />
        </div>
       <input type="hidden" name="id" value="<%= user._id %>">
        <button type="submit" class="btn btn-outline-light w-25">Update</button>
      </form>
    </div>
  </div>
</div>
  <%- include('../partials/admin_partials/adminFooter') %>